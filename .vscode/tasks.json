{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar DoomLike (g++)",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++17",
                "-Iinclude",
                
                // Lista todas as pastas onde tem c√≥digo
                "src/core/*.cpp",
                "src/graphics/*.cpp",
                "src/input/*.cpp",
                "src/level/*.cpp",
                "src/utils/*.cpp",
                "main.cpp",

                "-o",
                "${workspaceFolder}/build/DoomLike.exe",

                // Bibliotecas (LINKER) - A ordem importa!
                "-lglew32",
                "-lfreeglut",
                "-lopengl32",
                "-lglu32"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}